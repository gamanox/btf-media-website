<div class="section" id="intro-section">
    <video id="homepage-video" height="auto" width="auto" constrols autoplay preload="auto">
        {{#each global.homepage_videos}}
        <source src="{{video}}" type="video/webm">
        {{/each}}
        Your browser does not support the video tag.
    </video>
</div>
{{#proyecto}}

{{#each this}}
{{!-- {{proyecto}} --}}
<div class="section proyecto" id="section-{{page_slug}}" style="background-image: url('{{proyecto_entry.imagen_homepage}}')">

    <div class="container-fluid">
        <div class="logo-proyecto">
            <img src="{{proyecto_entry.logo_proyecto}}" alt="" class="info-anim">


            <p class="descripcion info-anim">{{proyecto_entry.descripcion_corta_proyecto}}</p>
            <div class="cont-ir-proyecto">
                {{#each proyecto_entry.premios}}
                <a href="{{url}}" class="premio info-anim" target="_blank">
                    <img src="{{logo}}" alt="{{titulo}}">
                </a>
                {{/each}}
                <img src="/assets/img/go_to_project_arrow.svg" alt="" class="info-anim">
                <a href="proyecto/{{page_slug}}" class="boton-ir-a-proyecto info-anim">{{proyecto_entry.ver_proyecto_texto}}</a>
            </div>
        </div>
    </div>
</div>
{{/each}}

{{/proyecto}}
</div>